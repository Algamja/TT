<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jmkim.nomad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".GenAgeActivity" />
        <activity android:name=".ActivitySelectActivity" />
        <activity android:name=".SignEndActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".FindIdPwActivity" />
        <activity android:name=".MypageActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".UserInfoEditActivity" />
        <activity android:name=".BasicEditActivity" />
        <activity android:name=".PartyEditActivity" />
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".WriterActivity" />
        <activity android:name=".ActivityEditActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".WritePlanActivity" />
        <activity android:name=".WriteReviewActivity" />
        <activity android:name=".Message.ChatActivity" />
        <activity
            android:name=".Message.MessageActivity"
            android:windowSoftInputMode="adjustPan" />

        <service android:name=".FireBaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".Message.GroupMessageActivity" />
        <activity android:name=".TestActivity" />
        <activity android:name=".Message.ForcedOutActivity"></activity>
    </application>

</manifest>