<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prev.PartyEditActivity"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/partyEdit_cb_party"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_font"
        android:text="파티원 모집에 동의합니다."/>

    <LinearLayout
        android:id="@+id/partyEdit_partySex"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/custom_font"
            android:text="파티원 성별"
            android:textSize="25sp" />

        <RadioGroup
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/partyEdit_rb_sameSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:text="동성만"/>

            <RadioButton
                android:id="@+id/partyEdit_rb_donCareSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:text="무관"/>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/partyEdit_partyAge"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/custom_font"
            android:text="파티원 나이"
            android:textSize="25sp" />

        <RadioGroup
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/partyEdit_rb_sameAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:text="동갑"/>

            <RadioButton
                android:id="@+id/partyEdit_rb_donCareAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:text="무관"/>

            <RadioButton
                android:id="@+id/partyEdit_rb_3Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:text="3살차이"/>

            <RadioButton
                android:id="@+id/partyEdit_rb_5Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:text="5살차이"/>

        </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/partyEdit_btn_change"
        android:background="#00ffffff"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_font"
        android:textSize="20dp"
        android:text="변경"/>

</LinearLayout>