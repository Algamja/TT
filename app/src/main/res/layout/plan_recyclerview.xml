<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/PA_ib_hot"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/one" />

        <TextView
            android:id="@+id/PA_tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/PA_ib_hot"
            android:layout_alignLeft="@+id/PA_ib_hot"
            android:layout_alignTop="@+id/PA_ib_hot"
            android:layout_alignEnd="@+id/PA_ib_hot"
            android:layout_alignRight="@+id/PA_ib_hot"
            android:layout_alignBottom="@+id/PA_ib_hot"
            android:gravity="center"
            android:fontFamily="@font/custom_font"
            android:text="Korea"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>