<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:fitsSystemWindows="true"
    android:layout_marginTop="15dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme"
            app:elevation="0dp">

            <!-- 상단 Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/searchActivity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#fff"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/custom_font"
                    android:text="TripBox"
                    android:textColor="#000"
                    android:textSize="25dp"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 글 작성 버튼 클릭 되었을 때 어두워지는 View -->
                <View
                    android:id="@+id/searchActivity_view_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:visibility="invisible"
                    android:layout_marginTop="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <!-- City/Activity 선택 -->
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:background="@drawable/radiobutton">

                            <!-- City -->
                            <RadioButton
                                android:id="@+id/searchActivity_rb_city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/radiobutton"
                                android:background="#ffffff"
                                android:fontFamily="@font/custom_font"
                                android:text="City"
                                android:textSize="25dp"
                                android:layout_marginRight="15dp"
                                android:checked="true"
                                android:padding="5dp"/>

                            <!-- Activity -->
                            <RadioButton
                                android:id="@+id/searchActivity_rb_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/radiobutton"
                                android:background="#ffffff"
                                android:fontFamily="@font/custom_font"
                                android:text="Activity"
                                android:textSize="25dp"
                                android:textColor="#a6a6a6a6"/>
                        </RadioGroup>
                    </LinearLayout>

                    <!-- 음영효과 -->
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="5dip"
                        android:background="@drawable/drop_shadow"/>

                    <!-- 검색창 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:gravity="center_vertical">

                        <!-- 검색 아이콘 -->
                        <ImageView
                            android:id="@+id/searchActivity_iv_search"
                            android:layout_width="26dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/search" />

                        <EditText
                            android:id="@+id/searchActivity_et_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/custom_font"
                            android:hint="Search"/>
                    </LinearLayout>

                    <!-- 검색 활성화 시 사라지는 부분 -->
                    <LinearLayout
                        android:id="@+id/searchActivity_ll_nonfocus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 음영효과 -->
                        <View
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="5dip"
                            android:background="@drawable/drop_shadow"/>

                        <!-- 추천 검색어 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/custom_font"
                            android:text="추천 검색어"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"/>

                        <!-- 추천 검색어 버튼 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp">

                            <Button
                                android:id="@+id/searchActivity_btn_recommend_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:background="#fff"
                                android:fontFamily="@font/custom_font"
                                android:text="도쿄" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="wrap_content"
                                android:background="#1f515151" />

                            <Button
                                android:id="@+id/searchActivity_btn_recommend_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:background="#fff"
                                android:fontFamily="@font/custom_font"
                                android:text="도쿄" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="20dp">

                            <Button
                                android:id="@+id/searchActivity_btn_recommend_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:background="#fff"
                                android:fontFamily="@font/custom_font"
                                android:text="도쿄" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="wrap_content"
                                android:background="#1f515151" />

                            <Button
                                android:id="@+id/searchActivity_btn_recommend_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:background="#fff"
                                android:fontFamily="@font/custom_font"
                                android:text="도쿄" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="20dp">

                            <Button
                                android:id="@+id/searchActivity_btn_recommend_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:background="#fff"
                                android:fontFamily="@font/custom_font"
                                android:text="도쿄" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="wrap_content"
                                android:background="#1f515151" />

                            <Button
                                android:id="@+id/searchActivity_btn_recommend_6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:background="#fff"
                                android:fontFamily="@font/custom_font"
                                android:text="도쿄" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="20dp">

                            <Button
                                android:id="@+id/searchActivity_btn_recommend_7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:background="#fff"
                                android:fontFamily="@font/custom_font"
                                android:text="도쿄" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="wrap_content"
                                android:background="#1f515151" />

                            <Button
                                android:id="@+id/searchActivity_btn_recommend_8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:background="#fff"
                                android:fontFamily="@font/custom_font"
                                android:text="도쿄" />
                        </LinearLayout>

                        <!-- 음영효과 -->
                        <View
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="5dip"
                            android:background="@drawable/drop_shadow"/>

                        <!-- 추천 일정 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/custom_font"
                            android:text="추천 일정"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"/>


                        <!-- 추천 일정 레이아웃 -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="3"
                            android:rowCount="2"
                            android:layout_marginTop="10dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="0"
                                android:layout_columnWeight="1">

                                <ImageView
                                    android:id="@+id/searchActivity_iv_1"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/searchActivity_iv_1"
                                    android:layout_alignLeft="@+id/searchActivity_iv_1"
                                    android:layout_alignRight="@+id/searchActivity_iv_1"
                                    android:gravity="bottom|center_horizontal"
                                    android:background="#d9000000"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/custom_font"
                                        android:text="국가"
                                        android:textColor="#fff"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/custom_font"
                                        android:text="작성자"
                                        android:textColor="#fff"/>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="0"
                                android:layout_columnWeight="1">


                                <ImageView
                                    android:id="@+id/searchActivity_iv_2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/searchActivity_iv_2"
                                    android:layout_alignLeft="@+id/searchActivity_iv_2"
                                    android:layout_alignRight="@+id/searchActivity_iv_2"
                                    android:gravity="bottom|center_horizontal"
                                    android:background="#d9000000"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/custom_font"
                                        android:text="국가"
                                        android:textColor="#fff"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/custom_font"
                                        android:text="작성자"
                                        android:textColor="#fff"/>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_row="0"
                                android:layout_columnWeight="1">

                                <ImageView
                                    android:id="@+id/searchActivity_iv_3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/searchActivity_iv_3"
                                    android:layout_alignLeft="@+id/searchActivity_iv_3"
                                    android:layout_alignRight="@+id/searchActivity_iv_3"
                                    android:gravity="bottom|center_horizontal"
                                    android:background="#d9000000"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/custom_font"
                                        android:text="국가"
                                        android:textColor="#fff"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/custom_font"
                                        android:text="작성자"
                                        android:textColor="#fff"/>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="1"
                                android:layout_columnWeight="1">

                                <ImageView
                                    android:id="@+id/searchActivity_iv_4"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/searchActivity_iv_4"
                                    android:layout_alignLeft="@+id/searchActivity_iv_4"
                                    android:layout_alignRight="@+id/searchActivity_iv_4"
                                    android:gravity="bottom|center_horizontal"
                                    android:background="#d9000000"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/custom_font"
                                        android:text="국가"
                                        android:textColor="#fff"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/custom_font"
                                        android:text="작성자"
                                        android:textColor="#fff"/>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="1"
                                android:layout_columnWeight="1"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:id="@+id/searchActivity_iv_5"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/searchActivity_iv_5"
                                    android:layout_alignLeft="@+id/searchActivity_iv_5"
                                    android:layout_alignRight="@+id/searchActivity_iv_5"
                                    android:gravity="bottom|center_horizontal"
                                    android:background="#d9000000"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/custom_font"
                                        android:text="국가"
                                        android:textColor="#fff"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/custom_font"
                                        android:text="작성자"
                                        android:textColor="#fff"/>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_row="1"
                                android:layout_columnWeight="1"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:id="@+id/searchActivity_iv_6"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/searchActivity_iv_6"
                                    android:layout_alignLeft="@+id/searchActivity_iv_6"
                                    android:layout_alignRight="@+id/searchActivity_iv_6"
                                    android:gravity="bottom|center_horizontal"
                                    android:background="#d9000000"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/custom_font"
                                        android:text="국가"
                                        android:textColor="#fff"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/custom_font"
                                        android:text="작성자"
                                        android:textColor="#fff"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </GridLayout>
                    </LinearLayout>

                    <!-- 검색 활성화 되었을 때 보이는 부분 -->
                    <LinearLayout
                        android:id="@+id/searchActivity_ll_focus"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- 음영효과 -->
                        <View
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="5dip"
                            android:background="@drawable/drop_shadow"/>

                        <LinearLayout
                            android:id="@+id/searchActivity_ll_recent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- 최근 검색어 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/custom_font"
                                android:text="최근 검색어"
                                android:textSize="15dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="20dp"/>

                            <!-- 최근 검색어 버튼 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="10dp">

                                <Button
                                    android:id="@+id/searchActivity_btn_recent_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:gravity="left|center_vertical"
                                    android:background="#00ffffff"
                                    android:paddingLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/custom_font"
                                    android:text="도쿄" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="2"
                                    android:src="@drawable/ic_close" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="20dp">

                                <Button
                                    android:id="@+id/searchActivity_btn_recent_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:gravity="left|center_vertical"
                                    android:background="#00ffffff"
                                    android:paddingLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/custom_font"
                                    android:text="도쿄" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="2"
                                    android:src="@drawable/ic_close" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="20dp">

                                <Button
                                    android:id="@+id/searchActivity_btn_recent_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:gravity="left|center_vertical"
                                    android:background="#00ffffff"
                                    android:paddingLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/custom_font"
                                    android:text="도쿄" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="2"
                                    android:src="@drawable/ic_close" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="20dp">

                                <Button
                                    android:id="@+id/searchActivity_btn_recent_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:gravity="left|center_vertical"
                                    android:background="#00ffffff"
                                    android:paddingLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/custom_font"
                                    android:text="도쿄" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="2"
                                    android:src="@drawable/ic_close" />
                            </LinearLayout>
                        </LinearLayout>

                        <ListView
                            android:id="@+id/searchActivity_lv_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="#00000000"
                            android:layout_marginHorizontal="20dp"
                            android:backgroundTint="#00ffffff"
                            android:background="#00ffffff"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <!-- 하단 FAB & BottomNavigation -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <!-- FAB -->
            <FrameLayout
                android:id="@+id/searchActivity_ll_write_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_above="@+id/searchActivity_bottomNavigation"
                android:layout_marginBottom="80dp"
                android:visibility="invisible">

                <!-- 리뷰 작성 버튼 -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/searchActivity_fb_write_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="#fff"
                    android:src="@drawable/ic_review"
                    app:borderWidth="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font"
                    android:text="리뷰쓰기"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_gravity="bottom|center"
                    android:layout_marginRight="60dp" />

                <!-- 일정 작성 버튼 -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/searchActivity_fb_write_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="#fff"
                    android:src="@drawable/ic_plan"
                    app:borderWidth="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font"
                    android:text="일정짜기"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_gravity="bottom|center"
                    android:layout_marginLeft="60dp" />
            </FrameLayout>

            <!-- BottomNavigation -->
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/searchActivity_bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="?android:attr/windowBackground"
                android:foregroundGravity="bottom"
                app:itemIconTint="@color/selector"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/bottom_navigation" />
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>