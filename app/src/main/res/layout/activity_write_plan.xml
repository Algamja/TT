<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    tools:context=".WritePlanActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/WP_ll_where"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"> <!-- 상단 국가, 도시 -->

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/search"
            android:layout_marginRight="10dp"/> <!-- 검색 아이콘 -->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="여행지 검색"/> <!-- Search -->

        <ImageView
            android:id="@+id/WP_iv_flag"
            android:layout_width="99dp"
            android:layout_height="66dp"
            android:visibility="gone"/> <!-- 국기 이미지 -->

        <TextView
            android:id="@+id/WP_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="도시"
            android:textSize="30sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/WP_tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="국가"
            android:textSize="15sp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/WP_ll_when"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal"> <!-- 여행 날짜 -->

        <TextView
            android:id="@+id/WP_tv_choose_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="언제 여행을 떠나시나요?"
            android:textSize="30sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"> <!-- 날짜 나오는 부분 -->

            <TextView
                android:id="@+id/WP_tv_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/WP_tv_DN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/WP_ll_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/WP_tv_howmanyppl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="몇 명이서 가시나요?"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/WP_ll_go_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/WP_tv_totalppl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/WP_tv_currentppl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/one"
            android:padding="5dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/one"
            android:padding="5dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="0"
            android:src="@drawable/one"
            android:padding="5dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/one"
            android:padding="5dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@drawable/one"
            android:padding="5dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@drawable/one"
            android:padding="5dp"
            android:scaleType="fitXY"/>

    </GridLayout>

    <LinearLayout
        android:id="@+id/WP_ll_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/WP_ll_recom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WP_tv_recomplan"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="취향저격 일정!"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/WP_ib_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="도움말"
                android:src="@drawable/ic_help" />
        </LinearLayout>

        <include
            layout="@layout/activity_recommend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/WP_ib_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="#00000000"
            android:src="@drawable/ic_add" /><!--취향저격 일정! 더 보기-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/WP_ll_recomhot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/WP_tv_currenthot"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="요즘 뜨는 여행지"
            android:textSize="23sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/WP_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>

</ScrollView>