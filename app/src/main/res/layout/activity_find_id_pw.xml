<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/findEmail_tv_email"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"

            android:fontFamily="@font/custom_font"
            android:textSize="27dp"
            android:textColor="@android:color/black"
            android:text="이메일 찾기"
            />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/findEmail_et_name"
                    android:fontFamily="@font/custom_font"
                    android:hint="이름"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/findEmail_et_phone"
                    android:fontFamily="@font/custom_font"
                    android:hint="핸드폰 번호"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <Button
            android:id="@+id/findEmail_btn_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/custom_font"
            android:text="찾기"/>

        <!--ID 찾기 끝-->


        <TextView
            android:id="@+id/find_pw"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"

            android:fontFamily="@font/custom_font"
            android:textSize="27dp"
            android:textColor="@android:color/black"
            android:text="비밀번호 찾기"
            />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/findPw_et_email"
                    android:fontFamily="@font/custom_font"
                    android:hint="이메일"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/findPw_et_name"
                    android:fontFamily="@font/custom_font"
                    android:hint="이름"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/findPw_et_phone"
                    android:fontFamily="@font/custom_font"
                    android:hint="핸드폰 번호"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/findPw_btn_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/custom_font"
            android:text="찾기"/>
        <!-- PW 찾기 끝-->

        <Button
            android:id="@+id/find_btn_back"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/custom_font"
            android:text="뒤로가기" />
    </LinearLayout>
</ScrollView>
