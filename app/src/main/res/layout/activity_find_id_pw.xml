<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/find_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"

        android:textSize="27dp"
        android:textColor="@android:color/black"
        android:text="ID 찾기"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/tv_id_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textSize="23dp"
            android:textColor="@android:color/black"
            android:text="이름"
            />

        <EditText
            android:id="@+id/et_id_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:layout_marginLeft="20dp"

            android:hint="이름을 입력하세요"
            />
    </LinearLayout>
    //ID_이름입력

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/tv_id_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textSize="23dp"
            android:textColor="@android:color/black"
            android:text="휴대폰번호"
            />

        <EditText
            android:id="@+id/et_id_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:layout_marginLeft="20dp"

            android:hint="번호를 입력하세요"
            android:inputType="phone"
            />
    </LinearLayout>
    //ID_핸드폰 입력

    <Button
        android:id="@+id/btn_find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        android:text="찾기"/>

    //ID 찾기


    <TextView
        android:id="@+id/find_pw"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"

        android:textSize="27dp"
        android:textColor="@android:color/black"
        android:text="비밀번호 찾기"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/tv_pw_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textSize="23dp"
            android:textColor="@android:color/black"
            android:text="ID"
            />

        <EditText
            android:id="@+id/et_pw_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:layout_marginLeft="20dp"

            android:hint="ID를 입력하세요"
            />
    </LinearLayout>
    //PW_ID입력

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/tv_pw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textSize="23dp"
            android:textColor="@android:color/black"
            android:text="이름"
            />

        <EditText
            android:id="@+id/et_pw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:layout_marginLeft="20dp"

            android:hint="이름을 입력하세요"
            />
    </LinearLayout>
    //PW_이름입력

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_pw_pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textSize="23dp"
            android:textColor="@android:color/black"
            android:text="휴대폰번호"
            />

        <EditText
            android:id="@+id/et_pw_pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:layout_marginLeft="20dp"

            android:hint="번호를 입력하세요"
            android:inputType="phone"
            />
    </LinearLayout>
    //PW_핸드폰 입력

    <Button
        android:id="@+id/btn_find_fw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        android:text="찾기"/>

    //PW찾기
</LinearLayout>