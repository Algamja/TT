<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30sp">

        <!-- 도시화면(2) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15sp">

            <ImageView
                android:id="@+id/read_plan_flag"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:paddingLeft="15sp"
                android:scaleType="centerInside"
                android:src="@drawable/taiwan" />

            <TextView
                android:id="@+id/read_plan_city"
                android:layout_width="0sp"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="15sp"
                android:fontFamily="@font/custom_font"
                android:text="태국 - 방콕"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10sp">

            <TextView
                android:id="@+id/read_plan_period"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10sp"
                android:fontFamily="@font/custom_font"
                android:text="여행기간"
                android:textColor="#000"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#ddd" />

            <TextView
                android:id="@+id/read_plan_total"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10sp"
                android:fontFamily="@font/custom_font"
                android:text="몇명이랑 가는지"
                android:textColor="#000"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#ddd" />

            <TextView
                android:id="@+id/read_plan_want"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10sp"
                android:fontFamily="@font/custom_font"
                android:text="몇 명 구하는지"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/read_plan_schedule"
            android:paddingBottom="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/read_plan_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/custom_font"
            android:text="신청하기"
            android:layout_gravity="right"
            android:layout_marginRight="10sp" />
    </LinearLayout>
</ScrollView>