<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/WP_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/RT_iv_flag"
            android:layout_width="99dp"
            android:layout_height="66dp"
            android:src="@drawable/canada" />

        <LinearLayout
            android:id="@+id/RT_ll_title"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RT_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/RT_tv_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="글쓴이"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/RT_ll_star"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_emptystar" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/RT_ll_good"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_favorite" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="18dp"
                        android:text="1000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RT_ll_recruitppl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"><!--사람 모집하는 -->

            <ImageView
                android:id="@+id/iv_partyppl"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/party_ppl" />

            <LinearLayout
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/iv_partyppl"
                android:layout_alignLeft="@+id/iv_partyppl"
                android:layout_alignEnd="@+id/iv_partyppl"
                android:layout_alignRight="@+id/iv_partyppl"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/RT_tv_alreadyppl"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:textColor="#FFF"
                    android:text="3" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:textColor="#FFF"
                    android:text="/" />

                <TextView
                    android:id="@+id/RT_tv_totalppl"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:textColor="#FFF"
                    android:text="5" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>