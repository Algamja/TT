<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/WP_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/RT_iv_flag"
            android:layout_width="99dp"
            android:layout_height="66dp"
            android:src="@drawable/canada" />

        <LinearLayout
            android:id="@+id/RT_ll_title"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RT_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/RT_tv_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="글쓴이"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/RT_ll_star"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_emptystar" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/RT_ll_good"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_favorite" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="18dp"
                        android:text="1000" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RT_ll_recruitppl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"><!--사람 모집하는 -->

            <TextView
                android:id="@+id/RT_tv_alreadyppl"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="3"/>
            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="/"/>
            <TextView
                android:id="@+id/RT_tv_totalppl"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="5"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>