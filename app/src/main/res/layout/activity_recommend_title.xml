<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="17sp"
    android:paddingRight="5sp">

    <LinearLayout
        android:id="@+id/WP_ll_title"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/RT_iv_flag"
            android:layout_width="99dp"
            android:layout_height="66dp"
            android:paddingHorizontal="8sp"
            android:scaleType="centerInside"
            android:src="@drawable/taiwan" />

        <LinearLayout
            android:id="@+id/RT_ll_title"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingVertical="8sp">

            <TextView
                android:id="@+id/RT_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="야시장 먹부림 여행!"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RT_tv_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="글쓴이"
                android:textColor="#aaa"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 별점 -->
                <LinearLayout
                    android:id="@+id/RT_ll_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fullstar" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_emptystar" />
                </LinearLayout>

                <!-- like -->
                <LinearLayout
                    android:id="@+id/RT_ll_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:gravity="right|center_vertical"
                        android:text="4K"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/button_like" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RT_ll_recruitppl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"><!--사람 모집하는 -->

            <ImageView
                android:id="@+id/iv_partyppl"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:paddingTop="7sp"
                android:src="@drawable/party_ppl" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/RT_tv_alreadyppl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#FFF"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="/"
                    android:textColor="#FFF"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/RT_tv_totalppl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#FFF"
                    android:textSize="14dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>