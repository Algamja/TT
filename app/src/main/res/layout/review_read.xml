<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/review_read_rl_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/review_read_tv_hashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/custom_font"
            android:text="#해시태그"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"/>

        <RatingBar
            android:id="@+id/review_item_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="0.1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-45dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/review_read_tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_font"
        android:textSize="18sp"
        android:text="한줄평"
        android:layout_below="@+id/review_read_rl_hashtag"
        android:background="#00000000"
        android:gravity="center_horizontal"
        android:layout_marginTop="30sp"/>

    <ImageView
        android:id="@+id/review_read_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/review_read_tv_comment"
        android:layout_marginTop="30dp"/>

</RelativeLayout>