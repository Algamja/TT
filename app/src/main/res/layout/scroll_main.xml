<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main">

        <android.support.v4.view.ViewPager
            android:id="@+id/scroll_vp"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        //광고 등 스와이프 들어갈 자리

        <LinearLayout
            android:id="@+id/scroll_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/scroll_vp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="#9ccfe1"> //게시글 레이아웃 시작

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccebec"> //프로필 등 시작

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_margin="10dp"
                    android:id="@+id/scroll_iv_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/profile"/> //프로필 사진 끝

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="글 제목"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여행할 국가"/>
                </LinearLayout> //제목이랑 국가 끝
            </LinearLayout> //프로필 등 끝

            <android.support.v4.view.ViewPager
                android:id="@+id/scroll_vp_board"
                android:layout_width="match_parent"
                android:layout_height="300dp"/> //게시글 이미지 끝

            <LinearLayout
                android:layout_below="@id/scroll_vp_board"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ToggleButton
                    android:id="@+id/scroll_btn_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_favorite"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>
            </LinearLayout>
        </LinearLayout>//게시글 끝
        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/scroll_linearLayout"
            android:text="Hello World 01 !" />

        <TextView
            android:id="@+id/textView02"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/textView01"
            android:text="Hello World 02 !" />

        <TextView
            android:id="@+id/textView03"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/textView02"
            android:text="Hello World 03 !" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/textView03"
            android:text="Hello World 04 !" />

        <TextView
            android:id="@+id/textView05"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/textView04"
            android:text="Hello World 05 !" />


        <TextView
            android:id="@+id/textView06"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/textView05"
            android:text="Hello World 06 !" />

        <TextView
            android:id="@+id/textView07"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/textView06"
            android:text="Hello World 07 !" />

        <TextView
            android:id="@+id/textView08"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/textView07"
            android:text="Hello World 08 !" />

        <TextView
            android:id="@+id/textView09"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/textView08"
            android:text="Hello World 09 !" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>